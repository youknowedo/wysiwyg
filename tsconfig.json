{
    "include": ["src/**/*"],
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "rootDir": ".",
        "moduleResolution": "nodenext",
        "resolveJsonModule": true,
        "outDir": "./public",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}
